package view;

/**
 * This class sets up the board keys allowing the 
 * user to access them.
 * 
 * @author Armoni Atherton athera@uw.edu
 * @version December 7, 2017 
 */
public class BoardKeys {
    /**
     * This will store the value of the up key.
     */
    private final int myUpKey;
    
    /**
     * This will store the value of the up key.
     */
    private final int myDownKey;
    
    /**
     * This will store the value of the up key.
     */
    private final int myLeftKey;
    
    /**
     * This will store the value of the up key.
     */
    private final int myRightKey;
    
    /**
     * This will store the value of the up key.
     */
    private final int myDropKey;
    
    /**
     * This constructs the keys that will set them
     * to fields in this class.
     * 
     * @param theUpKey the incoming up key.
     * @param theDownKey the incoming down key.
     * @param theLeftKey the incoming left key.
     * @param theRightKey the incoming right key.
     * @param theDropKey the incoming drop key.
     */
    public BoardKeys(final int theUpKey, final int theDownKey, 
                     final int theLeftKey, final int theRightKey, 
                     final int theDropKey) {
        myUpKey = theUpKey;
        myDownKey = theDownKey;
        myLeftKey = theLeftKey;
        myRightKey = theRightKey;
        myDropKey = theDropKey;    
    }
    
    /**
     * This allows access to the value or key stored
     * as the up key.
     * 
     * @return the up key.
     */
    public int getUpKeys() {
        return myUpKey;
    }
    
    /**
     * This allows access to the value or key stored
     * as the down key.
     * 
     * @return the down key.
     */
    public int getDownKeys() {
        return myDownKey;
    }
    
    /**
     * This allows access to the value or key stored
     * as the left key.
     * 
     * @return the left key.
     */
    public int getLeftKeys() {
        return myLeftKey;
    }
    
    /**
     * This allows access to the value or key stored
     * as the right key.
     * 
     * @return the right key.
     */
    public int getRightKeys() {
        return myRightKey;
    }
    
    /**
     * This allows access to the value or key stored
     * as the drop key.
     * 
     * @return the drop key.
     */
    public int getDropKeys() {
        return myDropKey;
    }
}
